<section class="section-show">
	<div class="container">
		<div class="row">
				<div class="col-lg-6"><%= attachment_image_tag @item, :image, :fill, 500, 500 %></div><!--商品写真、画面左側-->

				<div class="col-lg-6"><!--商品情報、画面右側-->
					<div class="show-title"><%= @item.name %></div>
					<div class="show-price"><%= number_to_currency(@item.price, :unit => "￥", :precision => 0) %><span class="show-size">（税込）</span></div>
					<div>
						＜生産者名＞
						<%= link_to introduction_path do %>
						<%= @item.person.name %>
						<% end %>
					</div>
					<div class="show-item-top">＜商品説明＞<br><br><%= @item.description %></div>
					<div>残り<%= @item.stock %>個</div>
						<%= form_for @cart do |f| %>
							<%= f.number_field :count, min:1, max: @item.stock,value: 1 %>個
							<%= f.hidden_field :item_id, value: @item.id %>
							<div><span class="glyphicon glyphicon-shopping-cart big" aria-hidden="true"></span><%= f.submit "カートに入れる", class: "cart" %></div>
						<% end %>
					<% if admin_signed_in? %>
						<br><%= link_to "商品情報編集", edit_item_path(@item.id) %>
						<br><%= link_to "商品削除", item_path(@item.id), method: :delete, "data-confirm" => "商品を削除してよろしいですか?" %>
					<% end %>
				</div>
		</div>
	</div>
</section>
