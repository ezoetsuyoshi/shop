<section>
	<h2 class="text-center">＜商品情報変更画面＞</h2><br><br>

	<% if @item.errors.any? %>
	    <ul>
	      	<% @item.errors.full_messages.each do |message| %>
	        <li class="error-message"><%= message %></li>
	      	<% end %>
	    </ul>
	<% end %>

	<%= form_for(@item) do |f| %>
		<div class="text-center border-line">
			<p>生産者</p>
			<%= f.collection_select :person_id, Person.all, :id, :lastname %>
		</div>
		<div class="text-center border-line">
			<p>カテゴリ</p>
			<%= f.collection_select :category_id, Category.all, :id, :name %>
		</div>
		<div class="text-center border-line">
			<p>商品名</p>
			<%= f.text_field :name %>
		</div>
		<div class="text-center border-line">
			<p>商品名（読み仮名）</p>
			<%= f.text_field :yomi_name,placeholder: "ひらがなで入力　例）とまと",size: 30 %>
		</div>
		<div class="text-center border-line">
			<p>在庫数</p>
			<%= f.select :stock, 1..1000 %>個
		</div>
		<div class="border-line">
			<p class="text-center">商品画像</p>
			<div class="margin-left"><%= f.attachment_field :image %></div>
		</div>
		<div class="text-center border-line">
			<p>値段</p>
			<%= f.text_field :price %>円
		</div>
		<div class="text-center border-line">
			<p>商品説明(１４０文字まで)</p><p id="textlength1">入力時ここに文字数が表示されます</p>
			<%= f.text_area :description, size: "60x8",onFocus: "countLength(value, 'textlength1');",onKeyUp: "countLength(value, 'textlength1');" %>
		</div>
		<div class="text-center">
			<%= f.submit "変更を保存する" %>
		</div>
	<% end %>
</section>