<section>
	<div class="container">
		<div class="row">
			<div class="col-lg-3 item-show-media">
				<%= attachment_image_tag @person, :image,:fill,250,250 %><br>
				<div class="text-center"><%= @person.lastname %>　<%= @person.firstname %>さん</div><br><br>
				<div class="text-center">野菜の生産地：<span class="person-color"><%= @person.area %></span></div><br><br>
			</div>
			<div class="col-lg-6 person-text">
				<%= @person.introduction2 %>
			</div>
		</div>

		<h4 class="text-center">＜<%= @person.lastname %>　<%= @person.firstname %>さんの掲載商品一覧＞</h4><br><br>
		<div class="row">
			<% @items.each do |i| %>
				<% if i.person_id == @person.id %>
					<div class="inline">
						<%= link_to item_path(i.id) do %>
							<div class="box"><%= attachment_image_tag i, :image, :fill, 150, 150 %></div>
						<% end %>
						<div><%= i.name %></div>
						<div class="item-price"><%= number_to_currency(i.price, :unit => "￥", :precision => 0) %></div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</section>