<section>
  <h2 class="text-center">会員登録画面</h2><br><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="text-center border-line">
      <P>お名前</P>
      姓：<%= f.text_field :lastname, autofocus: true %>　名：<%= f.text_field :firstname, autofocus: true %>
    </div>

    <div class="text-center border-line">
      <P>お名前（カナ）</P>
      セイ：<%= f.text_field :kana_lastname, autofocus: true %>　メイ：<%= f.text_field :kana_firstname, autofocus: true %>
    </div>

    <div class="text-center border-line">
      <p>郵便番号（半角、ハイフンなし）</p>
      <%= f.text_field :postal_code, autofocus: true,placeholder:"例）　2130001" %>
    </div>

    <div class="text-center border-line">
      <p>住所（全角）</p>
      <%= f.text_field :address, autofocus: true,placeholder:"例）　東京都新宿区新宿１−１−１",size: 40 %>
    </div>

    <div class="text-center border-line">
      <p>建物名・マンション名、号室（全角）</p>
      <%= f.text_field :address2, autofocus: true,placeholder:"例）　佐藤ハイツ　２０１号室",size: 40 %>
    </div>

    <div class="text-center border-line">
      <p>電話番号（半角）</p>
      <%= f.text_field :phone, autofocus: true, :size=>"40",placeholder:"例）　090-0000-0000" %>
    </div>

    <div class="text-center border-line">
      <p>メールアドレス</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"例）　***@****.com",size: 40 %>
    </div>

    <div class="text-center border-line">
      <p>パスワード</p>
      <% if @minimum_password_length %>
      <em>(英数字<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="text-center border-line">
      <p>パスワード確認用</p>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="text-center border-line">
      <%= f.submit "登録する" %>
    </div>
  <% end %>
</section>

