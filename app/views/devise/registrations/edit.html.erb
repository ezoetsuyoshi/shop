<section>
  <h2 class="text-center">＜登録情報編集画面＞</h2><br><br>

  <%= devise_error_messages! %>

  <div class="login-box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="text-center border-line">
        <P>お名前</P>
        <div>姓：<%= f.text_field :lastname, autofocus: true,placeholder:"例）　山田" %></div><br>
        <div>名：<%= f.text_field :firstname, autofocus: true,placeholder:"例）　太郎" %></div>
      </div>

      <div class="text-center border-line">
        <P>お名前（カナ）</P>
        <div>セイ：<%= f.text_field :kana_lastname, autofocus: true,placeholder:"例）　ヤマダ" %></div><br>
        <div>メイ：<%= f.text_field :kana_firstname, autofocus: true,placeholder:"例）　タロウ" %></div>
      </div>
      <div class="h-adr">
        <span class="p-country-name" style="display:none;">Japan</span>
          <div class="text-center border-line">
            <p>郵便番号（半角、ハイフンなし）</p>
            <%= f.text_field :postal_code,size: 15, autofocus: true,class:"form_style form_input p-postal-code",maxlength:"8",placeholder:"例）　2130001" %>
          </div>

          <div class="text-center border-line">
            <p>住所（全角）</p>
            <%= f.text_field :address, autofocus: true,class:"form_style form_input p-region p-locality p-street-address p-extended-address",placeholder:"例）　東京都新宿区新宿１−１−１",size: 40 %>
          </div>
      </div>
      <div class="text-center border-line">
        <p>建物名・マンション名、号室（全角）</p>
        <%= f.text_field :address2, autofocus: true,placeholder:"例）　佐藤ハイツ　２０１号室",size: 40 %>
      </div>

      <div class="text-center border-line">
        <p>電話番号（半角、ハイフンあり）</p>
        <%= f.text_field :phone, autofocus: true, :size=>"40",placeholder:"例）　090-0000-0000" %>
      </div>

      <div class="text-center border-line">
        <p>メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"例）　***@****.com",size: 40 %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="text-center border-line">
        <p>現在のパスワード</p>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="devise_user">
        <div class="text-center border-line">
        <p>新しいパスワード(変更する場合のみ入力)</p>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em>(英数字<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="text-center border-line">
          <p>パスワード確認用</p>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="text-center border-line">
        <%= f.submit "変更を保存する" %>
      </div>
    <% end %>
  </div>
</section>

